<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".About_Us">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="415dp"
        android:layout_height="109dp"
        android:background="@color/darkbrown">
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koho_semibold"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="@color/darkbrown"
        android:textSize="30dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <ImageView
        android:id="@+id/logo_header"
        android:layout_width="405dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lako_header_logo" />


    <ImageView
        android:layout_width="344dp"
        android:layout_height="550dp"
        android:background="@drawable/rectangle_about_us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

    <TextView
        android:layout_width="323dp"
        android:layout_height="190dp"
        android:fontFamily="@font/jost_regular"
        android:text="Welcome to Lakò, your mobile platform for supporting local creative sellers!
        At Lakò, we are dedicated to bridging the gap between talented local artists and a broader
        audience by providing a centralized, curated e-commerce space exclusively for showcasing
        handcrafted products. Our mission is to empower local artisans, offering them the tools and
        resources needed to optimize sales, enhance customer engagement, and gain the recognition
        they deserve."
        android:textAlignment="textStart"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <TextView
        android:layout_width="323dp"
        android:layout_height="190dp"
        android:fontFamily="@font/jost_regular"
        android:text="Lakò was born out of the need to address the challenges faced by local
        artists in connecting with potential customers. Traditional e-commerce platforms often
        overshadow these artisans with established brands, limiting their visibility and sales
        opportunities. Our platform is designed to eliminate this competition, creating a
        community-driven marketplace where local talent can thrive."
        android:textAlignment="textStart"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:layout_width="323dp"
        android:layout_height="190dp"
        android:fontFamily="@font/jost_regular"
        android:text="With features like visually appealing profile showcases, direct messaging
        for inquiries, a personalized explore feed, organized product categories, community chat,
        and promotional tools, Lakò ensures a seamless and supportive experience for both sellers
        and buyers. Join us in celebrating Filipino culture and supporting small businesses, one
        craft at a time."
        android:textAlignment="textStart"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />


</androidx.constraintlayout.widget.ConstraintLayout>